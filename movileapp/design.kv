<CommonAssistChip@MDChip>
    # Custom attribute.
    text: ""
    icon: ""

    # Chip attribute.
    type: "assist"
    md_bg_color: '#CBBFA8FF'
    line_color: "grey"
    elevation: 1
    shadow_softness: 2

    MDChipLeadingIcon:
        padding: "10dp"
        icon: root.icon
        theme_text_color: "Custom"
        text_color: "#68896c"

    MDChipText:
        text: root.text
        theme_text_color: "Custom"
        text_color: "#e6e9df"

<MainScreen>:
    name: 'main_view'
    canvas.before:
        Color: 
            rgba: (203/255, 191/255, 168/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'
        spacing: 10
        padding: 10

        Image:
            source: 'logo.png' 
            size_hint: None, None
            size: dp(400), dp(400) 
            pos_hint: {'center_x': 0.5}  
            allow_stretch: True 

        Label:  
            size_hint_y: None
            height: dp(20)

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10

            MDRaisedButton:
                text: 'Código de Pedido'
                font_size: '20pt'
                underline: True
                size_hint_y: None
                height: 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: app.cambiar_vista()
        
            MDRaisedButton:
                text: 'Promos con Código'
                font_size: '20pt'
                underline: True
                size_hint_y: None
                height: 50 
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: app.root.current = 'promos_view'

<SecondScreen>:
    name: 'second_view'
    canvas.before:
        Color: 
            rgba: (203/255, 191/255, 168/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        Image:
            source: 'logo.png' 
            size_hint: None, None
            size: dp(200), dp(200) 
            pos_hint: {'center_x': 0.5, 'top': 1}  
            allow_stretch: True 

        MDTextField:
            hint_text: "Ingrese Código Rastreo"
            helper_text: 'ID del Cliente'
            helper_text_mode: 'on_focus'
            font_size: '20pt'
            size_hint_y: None
            size_hint_x: None
            width: dp(300)
            height: 50
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text_color: (0, 0.157, 0.176, 1)
            line_color_normal: (0.796, 0.749, 0.659, 1)
            line_color_focus: (0, 0.157, 0.176)
            elevation: 0
            multiline: False
            on_text_validate: root.enviar_ID(self)
        
        MDRaisedButton:
            text: 'Consultar'
            font_size: '20pt'
            underline: True
            size_hint_y: None
            pos_hint: {'center_x': 0.5, 'center_y': 0.29}
            elevation: 0
            on_release: app.root.current = 'track_view'

        MDRaisedButton:
            text: 'Menú Principal'
            font_size: '20pt'
            underline: True
            size_hint_y: None
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            elevation: 0
            on_release: app.root.current = 'main_view'

<TrackScreen>:
    name: 'track_view'
    canvas.before:
        Color: 
            rgba: (203/255, 191/255, 168/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: 'vertical'

        Image:
            source: 'logo.png' 
            size_hint: None, None
            size: dp(200), dp(200) 
            pos_hint: {'center_x': 0.5}  
            allow_stretch: True 

        MDBoxLayout:
            orientation: 'vertical'
            adaptive_size: True
            pos_hint: {"center_x": .5}
            spacing: "12dp"
            padding: 0, "24dp", 0, 0

            CommonAssistChip:
                text: "Autorizando"
                icon: app.state_icons[0]

            CommonAssistChip:
                text: "Armando pedido"
                icon: app.state_icons[1]
            
            CommonAssistChip:
                text: "En camino"
                icon: app.state_icons[2]

            CommonAssistChip:
                text: "Estamos en su domicilio"
                icon: app.state_icons[3]
            
            CommonAssistChip:
                text: "Pedido entregado"
                icon: app.state_icons[4]

        BoxLayout:
            orientation: 'vertical'
            spacing: 10
            padding: 10

            MDRaisedButton:
                text: 'Home'
                font_size: '20pt'
                underline: True
                background_color: (1, 65/255, 64/255, 1)
                size_hint_y: None
                height: 50
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                on_release: app.root.current = 'main_view'

<PromoScreen>:
    name: 'promos_view'
    canvas.before:
        Color: 
            rgba: (203/255, 191/255, 168/255, 1)
        Rectangle:
            pos: self.pos
            size: self.size

    FloatLayout:
        Image:
            source: 'logo.png'
            size_hint: None, None
            size: dp(100), dp(100)
            pos_hint: {'center_x': 0.5, 'top': 1}
            allow_stretch: True

        MDRaisedButton:
            text: 'Menú Principal'
            font_size: '20pt'
            underline: True
            size_hint_y: None
            height: dp(50)
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            elevation: 0
            on_release: app.root.current = 'main_view'

        BoxLayout:
            orientation: 'vertical'
            size_hint: None, None
            size: dp(300), dp(450)
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            spacing: dp(10)

            BoxLayout:
                size_hint_y: None
                height: dp(120)
                padding: dp(10)
                orientation: 'horizontal'
                spacing: dp(5)

                Image:
                    source: 'promo1.png'
                    size_hint: None, None
                    size: dp(80), dp(80)
                    allow_stretch: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: dp(120)
                    padding: dp(10)

                    MDLabel:
                        text: "Cupón 1: Descuento del 20%"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: dp(40)

                    MDRaisedButton:
                        text: 'Obtener Cupón'
                        on_release: root.mostrar_cupon()
                        size_hint_y: None
                        height: dp(40)

            BoxLayout:
                size_hint_y: None
                height: dp(120)
                padding: dp(10)
                orientation: 'horizontal'
                spacing: dp(5)


                Image:
                    source: 'promo2.png'
                    size_hint: None, None
                    size: dp(80), dp(80)
                    allow_stretch: True


                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: dp(120)
                    padding: dp(10)

                    MDLabel:
                        text: "Cupón 2: Descuento del 15%"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: dp(40)

                    MDRaisedButton:
                        text: 'Obtener Cupón'
                        on_release: root.mostrar_cupon()
                        size_hint_y: None
                        height: dp(40)

            BoxLayout:
                size_hint_y: None
                height: dp(120)
                padding: dp(10)
                orientation: 'horizontal'
                spacing: dp(5)

                Image:
                    source: 'promo3.png'
                    size_hint: None, None
                    size: dp(80), dp(80)
                    allow_stretch: True

                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 1, None
                    height: dp(120)
                    padding: dp(10)

                    MDLabel:
                        text: "Cupón 3: Descuento del 10%"
                        theme_text_color: "Secondary"
                        size_hint_y: None
                        height: dp(40)

                    MDRaisedButton:
                        text: 'Obtener Cupón'
                        on_release: root.mostrar_cupon()
                        size_hint_y: None
                        height: dp(40)